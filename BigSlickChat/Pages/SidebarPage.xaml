<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="BigSlickChat.SidebarPage">
	<ContentPage.Content>
		<ScrollView x:Name="scrollView">
			<StackLayout x:Name="stackLayout" Orientation="Vertical">

				<StackLayout x:Name="addRemoveStack" Orientation="Horizontal">
					<Entry x:Name="chatroomEntry"/>
					<Button x:Name="addChatroomButton"/>
					<Button x:Name="removeChatroomButton"/>
				</StackLayout>

				<Button x:Name="redButton"/>
				<Button x:Name="blueButton"/>

				<StackLayout x:Name="chatroomStack" Orientation="Vertical">
					<!-- 
					This will be populated based on the users chatrooms

					<Button x:Name="gotoChatroom1"/>
					<Button x:Name="gotoChatroom2"/>
					-->
				</StackLayout>
				
				<Button x:Name="logoutBtn"/>
				<StackLayout x:Name="searchStack" Orientation="Horizontal">
					<Entry x:Name="searchEntry"/>
					<Button x:Name="searchButton"/>
					<Label x:Name="searchResultsLabel"/>
				</StackLayout>
				<Button x:Name="addBtn"/>
				<Entry x:Name="firebaseSearchEntry"/>
			</StackLayout>	
		</ScrollView>
	</ContentPage.Content>
</ContentPage>
